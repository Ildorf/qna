.new_answer
  = form_for [@question, @answer], remote: true  do |f|
    .answer-errors
    .input-group-addon
      = f.label :body, 'Your answer'
    = f.text_area :body, class: 'form-control new_answer_form'
    p
    = f.fields_for :attachments do |attach|
    = render 'attachments/links', f: f
    btn.btn-default
    = f.submit 'Post your answer'